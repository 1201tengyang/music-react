.haiqiu-swiper {
  height: 336px;
  margin: 0 auto;
  overflow: hidden;
  position: relative;

  .haiqiu-swiper-box {
    position: absolute;
    left: 0;

    &>div {
      float: left;
    }

    &.move-animation {
      transition: all 0.4s;
    }

    &.stop-animation {
      transition: all 0s;
    }
  }

  .haiqiu-swiper-pre-arrow, .haiqiu-swiper-next-arrow {
    color: #fff;
    cursor: pointer;
    font-size: 60px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%) scaleX(0.4);
    width: 30px;
    z-index: 2;
  }

  .haiqiu-swiper-pre-arrow {
    left: 0;
  }

  .haiqiu-swiper-next-arrow {
    right: 0;
  }
}
